<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5a9a0f"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textAlignment="center"
            android:textSize="30dp"
            android:text="请设置课程信息"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow android:gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  课程名称"
                    android:textColor="#004499"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/cname"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入课程名称"
                    android:singleLine="true" />

            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp" />

            <TableRow android:gravity="center_horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="  教师姓名"
                    android:textColor="#004499"
                    android:textSize="20sp"
                    android:id="@+id/textView2" />

                <EditText
                    android:id="@+id/tname"
                    android:layout_width="00dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入教师姓名"
                    android:singleLine="true" />

            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp" />

            <TableRow android:gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  上课地点"
                    android:textColor="#004499"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/caddress"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入上课地点"
                    android:singleLine="true" />

            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp" />

            <TableRow android:gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  教师电话"
                    android:textColor="#004499"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/tphone"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入教师电话"
                    android:singleLine="true" />

            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp" />

            <TableRow android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="5sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  教师email"
                        android:textColor="#004499"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/temail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入教师email" />

                </LinearLayout>
            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp" />

            <TableRow android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="5sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  教师办公室"
                        android:textColor="#004499"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/taddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入教师办公室" />

                </LinearLayout>
            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:background="#097e77"
                android:layout_marginLeft="50px"
                android:layout_toRightOf="@+id/class_cancel"
                android:id="@+id/class_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定" />

            <Button
                android:background="#097e77"
                android:layout_marginLeft="150px"
                android:id="@+id/class_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>